FROM --platform=${TARGETPLATFORM} ubuntu:devel AS builder
# FROM --platform=${TARGETPLATFORM} ubuntu:devel AS builder

# ARG TARGETPLATFORM \
#     TARGETARCH \
#     BUILDPLATFORM \
#     BUILDARCH

ARG BUILDPLATFORM \
    TARGETPLATFORM \
    TARGETARCH

RUN echo "TARGETPLATFORM=${TARGETPLATFORM} TARGETARCH=${TARGETARCH}" && \
    echo "BUILDPLATFORM=${BUILDPLATFORM} BUILDARCH=${BUILDARCH}"

RUN uname -a
